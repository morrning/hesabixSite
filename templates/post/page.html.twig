{% extends 'base.html.twig' %}

{% block title %}
	{{ item.title }}
{% endblock %}

{% block body %}
	{% if item.plain is not null %}
		{{ item.plain | raw}}
	{% endif %}
	{% if item.body is not null %}
		<div class="container">
			<div class="row">
				<div class="col">
					<h1 class="text-primary">{{item.title}}</h1>
					{{ item.body | raw}}
				</div>
			</div>
		</div>

	{% endif %}

{% endblock %}
